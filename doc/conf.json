{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": ["./app/controller"],
        "includePattern": ".+\\.ts(doc)?$"
    },
    "plugins": [
        "node_modules/better-docs/typescript"
    ],
    "opts": {
        "template": "node_modules/better-docs",
        "encoding": "utf8",
        "destination": "./doc/api-doc/",
        "recurse": true
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "outputSourceFiles": true
        }
    }
}